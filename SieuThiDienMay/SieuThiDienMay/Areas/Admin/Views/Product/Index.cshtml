@model PagedList.IPagedList<Model2.Product>
@using PagedList.Mvc;
@{ 
    ViewBag.Title = "Quản Lý Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}
<main>
    <div class="container-fluid">
        <h1 class="mt-4">Danh Sách Sản Phẩm </h1>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                
                    <div class="panel panel-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table table-striped table-hover " id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr><th>@Html.ActionLink("Thêm Sản Phẩm", "Add", null, new { @class = "btn btn-secondary" })</th></tr>
                                    <tr>
                                        <th>Mã Sản Phẩm</th>
                                        <th>Tên Sản Phẩm</th>
                                        <th>Giá Nhập</th>
                                        <th>Giá Bán</th>
                                        <th>Giá Khuyến Mãi</th>
                                        <th>Số Lượng</th>
                                        <th>Mô tả</th>
                                        <th>&nbsp;</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr id="row_@item.MaSp">
                                            <td>@item.MaSp</td>
                                            <td>@item.TenSP</td>
                                            <td>@item.GiaNhap</td>
                                            <td>@item.GiaBan</td>
                                            <td>@item.GiaKM</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.Mota</td>
                                            <td>
                                                @Html.ActionLink("Sửa", "Edit", new { id = item.ID_Product }, new { @class = "btn btn-primary" })
                                                @Html.ActionLink("Xóa", "Delete", new { id = item.ID_Product }, new { @class = "btn btn-danger" })
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Mã Sản Phẩm</th>
                                        <th>Tên Sản Phẩm</th>
                                        <th>Giá Nhập</th>
                                        <th>Giá Bán</th>
                                        <th>Giá Khuyến Mãi</th>
                                        <th>Số Lượng</th>
                                        <th>Mô tả</th>
                                        <th>&nbsp;</th>
                                    </tr>
                                </tfoot>
                            </table>
                            @Html.PagedListPager(Model, page => Url.Action("", "Index", new { page }))

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

